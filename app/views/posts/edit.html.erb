
<div class="container mt-3">
<%= form_tag("/posts/#{@post.id}", method: "put") do %>
  <div class="form-group">
    <label for="exampleInputEmail1">제목</label>
    <input type="text" value="<%= @post.title %>" class="form-control" name="title">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">작성자</label>
    <input type="text" value="<%= @post.writer %>" class="form-control" name="writer">
  </div>
  

  <div class="form-group">
    <label for="exampleTextarea">내용</label>
    <textarea class="form-control" id="exampleTextarea" rows="3" name="content"><%= @post.content %></textarea>
  </div>
 
  <button type="submit" class="btn btn-primary" style="align-text:right">수정하기</button>
<%end%>
</div>
